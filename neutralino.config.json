{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "0adri3n.down-d3skt0p",
  "version": "1.0.0",
  "author": "0adri3n",
  "description": "A desktop version of down-c0nn3ct. Lightweight and fully offline.",
  "copyright": "Copyright Â© 0adri3n 2025. All rights reserved.",
  "applicationIcon": "resources/assets/img/logo.ico",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/resources/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": ["app.*", "os.*", "debug.log"],
  "modes": {
    "window": {
      "title": "down-d3skt0p",
      "width": 1200,
      "height": 800,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/resources/assets/img/logo.ico",
      "enableInspector": false,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    },
    "browser": {
      "nativeBlockList": ["filesystem.*"]
    },
    "cloud": {
      "url": "/resources/#cloud",
      "nativeAllowList": ["app.*"]
    },
    "chrome": {
      "width": 1200,
      "height": 800,
      "args": "--user-agent=\"Neutralinojs chrome mode\"",
      "nativeBlockList": ["filesystem.*", "os.*"]
    }
  },
  "cli": {
    "binaryName": "down-d3skt0p",
    "resourcesPath": "/resources/",
    "extensionsPath": "/extensions/",
    "clientLibrary": "/resources/assets/js/script.js",
    "binaryVersion": "5.6.0",
    "clientVersion": "5.6.0"
  }
}
